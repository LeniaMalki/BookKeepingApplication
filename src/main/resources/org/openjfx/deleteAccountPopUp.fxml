<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="delAccPopUp" prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DeleteAccountPopUpController">
    <children>
        <Text fill="#5f6368" layoutX="137.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="Enrique-Round" text="Are you sure you want to delete your account?">
            <font>
                <Font size="30.0" />
            </font>
        </Text>
        <Text fill="#5f6368" layoutX="162.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="Enrique-LightRound" text="Deleting your account is an irreversible action. All of your personal data will be deleted.">
            <font>
                <Font size="15.0" />
            </font>
        </Text>
        <Text fill="#5f6368" layoutX="248.0" layoutY="244.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="Enrique-LightRound" text="Please enter your password to delete your account">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <Button fx:id="deleteAccountButton" defaultButton="true" layoutX="360.0" layoutY="372.0" mnemonicParsing="false" onAction="#deleteAccountConfirm" prefHeight="32.0" prefWidth="179.0" style="-fx-background-color: F66A80; -fx-background-radius: 10;" text="Delete account" textFill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
            <styleClass>
                <String fx:value="Enrique-BoldRound" />
                <String fx:value="font18px" />
            </styleClass>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
        <ImageView fx:id="exitButton" fitHeight="50.0" fitWidth="50.0" layoutX="836.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Images/closeButton.png" />
            </image>
        </ImageView>
        <PasswordField fx:id="enterPasswordToDelete" layoutX="280.0" layoutY="284.0" prefHeight="50.0" prefWidth="340.0" promptText="***********">
            <font>
                <Font size="15.0" />
            </font>
        </PasswordField>
      <Text fx:id="passwordIncorrectMessage" fill="RED" layoutX="321.0" layoutY="449.0" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
    </children>
    <stylesheets>
        <URL value="@../../cssFolder/font.css" />
        <URL value="@../../cssFolder/fontSizes.css" />
      <URL value="@../../cssFolder/linkActions.css" />
      <URL value="@../../cssFolder/buttonActions.css" />
    </stylesheets>
</AnchorPane>
