<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="changePasswordPopUp" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controllers.changePasswordPopUpController">
    <children>
        <PasswordField fx:id="signUpPassword" alignment="BOTTOM_LEFT" layoutX="275.0" layoutY="189.0"
                       minWidth="-Infinity" prefHeight="54.0" prefWidth="350.0" promptText="New Password"
                       style="-fx-background-color: #FFFFFF;">
            <font>
                <Font size="36.0"/>
            </font>
            <padding>
                <Insets bottom="1.0"/>
            </padding>
            <styleClass>
                <String fx:value="Enrique-Round"/>
                <String fx:value="font24px"/>
            </styleClass>
            <effect>
                <InnerShadow color="#00000021"/>
            </effect>
        </PasswordField>
        <PasswordField fx:id="signUpConfirmPassword" alignment="BOTTOM_LEFT" layoutX="275.0" layoutY="293.0"
                       minWidth="-Infinity" prefHeight="54.0" prefWidth="350.0" promptText="Confirm new password"
                       style="-fx-background-color: #FFFFFF;">
            <font>
                <Font size="36.0"/>
            </font>
            <padding>
                <Insets bottom="1.0"/>
            </padding>
            <styleClass>
                <String fx:value="Enrique-Round"/>
                <String fx:value="font24px"/>
            </styleClass>
            <effect>
                <InnerShadow color="#00000021"/>
            </effect>
        </PasswordField>
        <Text fill="#5f6368" layoutX="264.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Change your password">
            <font>
                <Font size="30.0"/>
            </font>
            <styleClass>
                <String fx:value="Enrique-Round"/>
                <String fx:value="font36px"/>
            </styleClass>
        </Text>
        <Text fill="#5f6368" layoutX="277.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0"
              styleClass="Enrique-LightRound" text="Please enter a new password and confirm it">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
        <ImageView fx:id="newPasswordCheck" fitHeight="50.0" fitWidth="50.0" layoutX="659.0" layoutY="191.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <ImageView fx:id="confirmNewPasswordCheck" fitHeight="50.0" fitWidth="50.0" layoutX="659.0" layoutY="295.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Button fx:id="changePasswordConfirm" layoutX="343.0" layoutY="389.0" mnemonicParsing="false"
                onAction="#onAction_ConfirmChangePassword_CLICKED" prefHeight="50.0" prefWidth="213.0"
                style="-fx-background-color: F66A80; -fx-background-radius: 10;" text="Change password"
                textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
            <styleClass>
                <String fx:value="Enrique-BoldRound"/>
                <String fx:value="font18px"/>
                <String fx:value="linkFillWhite"/>
            </styleClass>
        </Button>
        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="836.0" layoutY="14.0" pickOnBounds="true">
            <image>
                <Image url="@../../Images/closeButton.png"/>
            </image>
        </ImageView>
    </children>
    <stylesheets>
        <URL value="@../../cssFolder/linkActions.css"/>
        <URL value="@../../cssFolder/font.css"/>
        <URL value="@../../cssFolder/fontSizes.css"/>
    </stylesheets>
</AnchorPane>
